<h1>New Pdf</h1>
<%= form_for @pdf_response do |f| %>
  <%= f.fields_for :data do |ff| %>
    <%= ff.label :first_name %>
    <%= ff.text_field :first_name %>
    <br>
    <%= ff.label :last_name %>
    <%= ff.text_field :last_name %>
    <br>
    <%= ff.label :gender %>
    <br>
    <%= ff.radio_button :gender, "Female" %><%= ff.label :gender, "Female" %>
    <%= ff.radio_button :gender, "Male" %><%= ff.label :gender, "Male" %>
    <br>
    <%= ff.label :description %>
    <br>
    <%= ff.text_area :description %>
  <% end %>
  <%= f.submit %>
<% end %>
